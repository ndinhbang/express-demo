				"Vue.vscode-typescript-vue-plugin",
				"antfu.vite",
				"ZixuanChen.vitest-explorer",
				"redhat.vscode-yaml",
				"Vue.volar",
				"usernamehw.errorlens",
				"mikestead.dotenv",
				"alefragnani.Bookmarks",
				"jasonlhy.hungry-delete",
				"kisstkondoros.vscode-gutter-preview",
