{
	"name": "Node.js & PostgreSQL",
	"dockerComposeFile": [
		"../docker-compose.yml",
		"docker-compose.yml"
	],
	"service": "backend",
	"workspaceFolder": "/app",
	// More info: https://code.visualstudio.com/docs/devcontainers/tips-and-tricks#_persisting-user-profile
